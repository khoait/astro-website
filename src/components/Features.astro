---
import Card from "../components/Card.astro";
const featuresData = [
  {
    title: "Zero JavaScript Runtime",
    description: "Astro renders HTML on the server and strips away any remaining, unused JavaScript.",
    icon: "icon1",
  },
  {
    title: "The Power of Islands",
    description: "Need interactive UI? Load individual, non-blocking component islands in parallel.",
    icon: "icon2",
  },
  {
    title: "Lazy-loading Islands",
    description: "Components only hydrate when they scroll into view. If you don’t see it, Astro won’t load it.",
    icon: "icon3",
  },
];
---

<section class="features">
  <div class="container">
    {
      featuresData.map((feature) => (
        <Card>
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </Card>
      ))
    }
  </div>
</section>

<style>
  .features .container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;
    padding: 0 20px;
    margin: 30px auto;
  }
</style>
